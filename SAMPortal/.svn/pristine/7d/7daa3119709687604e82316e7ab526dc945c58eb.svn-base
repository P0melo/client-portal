/*UMTC Logo*/
.umtc-logo {
    height: 55px;
    margin-left: -16px;
    width: 100%;
}

.umtc-logo-circle {
    width: 100%;
    max-width: 40px;
    height: auto;
}

.bg1, .bg2, .bg3, .bg4, .bg5 {
    /* The image used */
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    z-index: -2;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

