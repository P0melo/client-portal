@media screen and (max-width: 1024px) {
    #home_banner {
        padding-top: 100px;
        height: 50%;
    }
}

@media screen and (max-width: 768px) {
    #home_banner {
        padding-top: 64px;
        height: 50%;
    }
}

@media screen and (max-width: 414px) {
    #home_banner {
        padding-top: 64px;
        height: 100%;
    }
}

