#meal_tbl_div {
    display: none;
}

#meal_tbl tr td {
    border: 1px solid #ddd;
    text-align: center;
    vertical-align: middle;
}

#meal_tbl thead {
    font-weight: bolder;
}

#reference_id_btn {
    text-decoration: underline;
}

#meal_log_edit_btn:hover, #meal_log_cancel_btn:hover, #meal_log_save_btn:hover, #reference_id_btn:hover {
    cursor: pointer;
}

#meal_modal .modal-content{
    overflow-x: auto;
    overflow-y: auto;
    max-height: 500px;
}

#meal_log_cancel_btn, #meal_log_save_btn {
    display: none;
}

#meal_log_tbl tr td, #meal_log_tbl thead th {
    text-align: center;
    vertical-align: middle;
}

#meal_modal .modal-body p {
    font-size: smaller;
}

#accomodation_err_msg{
    display: none;
}

#save_meal_btn {
    margin-top: 5px;
}

#save_accomodation_btn, #view_accomodation_btn, #view_rates_btn, #save_off_site_btn, #off_site_rates_and_inclusions_btn {
    margin: 5px;
}

pre{
    white-space: pre-wrap;
    word-wrap: break-word;
    text-align: justify;
}

#rates_and_inclusion_tbl th, #rates_and_inclusion_tbl td, #off_site_rates_and_inclusion_tbl th, #off_site_rates_and_inclusion_tbl td{
    text-align: center;
    vertical-align: middle;
}

#off_site_rates_and_inclusions_modal .modal-body p {
    margin: 10px;
    font-size: smaller;
}

#off_site_modal_form {
    text-align: center;
}

#off_site_accommodation_save_btn {
    margin-left: 10px;
}