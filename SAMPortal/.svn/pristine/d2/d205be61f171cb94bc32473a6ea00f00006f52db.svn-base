@media screen and (max-width: 1024px) {
    #home_banner {
        padding-top: 100px;
        height: 50%;
    }
}

@media screen and (max-width: 768px) {
    #home_banner {
        padding-top: 64px;
        height: 50%;
    }
}

@media screen and (max-width: 414px) {
    #home_banner {
        padding-top: 64px;
        height: 100%;
    }
}

/*@media screen and (max-height: 568px){
    #box-content {
        font-size: 18px;
    }
}*/

@media screen and (min-width: 1025px){
    #home_banner {
        padding: 100px;
        padding-top: 50px;
    }
}

#home_nav {
    background-color: red;
    margin: 0;
    border-radius: 0;
    height:50px;
}

#home_footer {
    background-image: url('../Content/images/cloud_and_waves.jpg');
    margin: 0;
    border-radius: 0;
    background-size: cover;
    background-repeat: no-repeat;
    text-align: center;
    height: 150px;
    padding: 15px;
    color: #0077b3;
}

#home_footer h4 {
    margin-top: 0;
    margin-bottom: 0;
}

#home_footer p{
    margin-bottom: 0;
}

#company_logo{
    width: 200px;
    height: auto;
}

.main_content{
    height: 100%;
}

#dashboard_btn{
    padding-top: 100px;
    text-align: center;
}

#dashboard_btn a{
    padding: 20px;
    font-size: 24px;
}


