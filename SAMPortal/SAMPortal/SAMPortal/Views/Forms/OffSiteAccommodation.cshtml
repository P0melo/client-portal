<div id="off_site_rates_and_inclusions_modal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
                <h4 class="modal-title">Rates and Inclusions</h4>
            </div>
            <div class="modal-body">
                <table id="off_site_rates_and_inclusion_tbl" class="table table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2">Hotel</th>
                            <th rowspan="2">Rate</th>
                            <th rowspan="2">Location</th>
                            <th colspan="2">Inclusions</th>
                            <th rowspan="2">Reminder</th>
                        </tr>
                        <tr>
                            <th>Meals</th>
                            <th>Others</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td rowspan="2"><a href="https://www.hoteljen.com/manila/roxasboulevard/about/" target="_blank">Hotel Jen (Deluxe Room)</a></td>
                            <td>
                                @System.Configuration.ConfigurationManager.AppSettings["hotelJenSingle"]
                                (Single)
                            </td>
                            <td rowspan="2">3001 Roxas Boulevard, Pasay City, Manila</td>
                            <td colspan="2" rowspan="4">Buffet Breakfast</td>
                            <td rowspan="4">Subject to Room Availability. Check-in time: 1400h / Check-out time: 1200h</td>
                        </tr>
                        <tr>
                            <td>@System.Configuration.ConfigurationManager.AppSettings["hotelJenDouble"] (Double)</td>
                        </tr>
                        <tr>
                            <td rowspan="2"><a href="https://www.diamondhotel.com/" target="_blank">Diamond Hotel (Deluxe Room)</a></td>
                            <td>@System.Configuration.ConfigurationManager.AppSettings["diamondHotelSingle"] (Single)</td>
                            <td rowspan="2">Roxas Boulevard cor. Dr. J. Quintos Street, Manila</td>
                        </tr>
                        <tr>
                            <td>@System.Configuration.ConfigurationManager.AppSettings["diamondHotelDouble"] (Double)</td>
                        </tr>
                    </tbody>
                </table>
                <p>Note: Billing will be at cost plus 1% handling fee.</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-success fade in" id="modal_success_accommodation">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Success!</h4>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-warning fade in" id="modal_offSiteAccommodation_submit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Warning!</h4>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="modal_offSiteAccommodation_submit_yes" class="btn btn-outline pull-right" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/offsiteaccommodation")
}


