
@{
    ViewBag.Title = "CompanyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-solid">
    <div class="box-header">
        <div class="box-tools pull-right ">
            <button type="button" id="update_profile_btn" class="btn btn-box-tool">
                <i class="fa fa-edit"></i>
            </button>
            <button type="button" id="cancel_changes_btn" class="btn btn-box-tool" style="display: none;">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body" id="cp_inputs">
        <div class="col-lg-6 form-group">
            <div class="col-xs-12">
                <label for="cp_name" class="control-label">Name</label>
                <input id="cp_name_input" type="text" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-lg-6 form-group">
            <div class="col-xs-12">
                <label for="cp_location" class="control-label">Location</label>
                <input id="cp_location_input" type="text" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-lg-6 form-group">
            <div class="col-xs-12">
                <label for="cp_email" class="control-label">Email</label>
                <input id="cp_email_input" type="text" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-lg-6 form-group">
            <div class="col-xs-12">
                <label for="cp_contact_person" class="control-label">Contact Person</label>
                <input id="cp_contact_person_input" type="text" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-lg-6 form-group">
            <div class="col-xs-12">
                <label for="cp_contact_person_position" class="control-label">Contact Person Position</label>
                <input id="cp_contact_person_position_input" type="text" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-lg-6 form-group">
            <div class="col-xs-12">
                <label for="cp_contact_number" class="control-label">Contact Number</label>
                <input id="cp_contact_number_input" type="text" class="form-control" disabled="disabled" />
            </div>
        </div>
        @*<div class="col-lg-6 form-group">
                <div class="col-xs-12">
                    <label for="cp_country" class="control-label">Country</label>
                    <input id="cp_country_input" type="text" class="form-control" disabled="disabled" />
                </div>
            </div>*@
        <div class="col-lg-6 form-group">
            <div class="col-md-3">
                <label for="cp_logo" class="control-label">Logo</label>
                <input id="cp_logo_input" type="file" style="display: none" />
                <input id="choose_input" type="button" class="btn btn-default" value="Choose..." onclick="document.getElementById('cp_logo_input').click();" disabled="disabled" />
            </div>
            <div id="preview_div" class="col-md-9" style="text-align: center;">
                <img id="preview" class="img-responsive" src="~/Content/images/Default-Logo.jpg" alt="logo_preview" />
            </div>
        </div>
        <div class="col-lg-12 form-group">
            <div class="col-xs-12">
                <label for="cp_description" class="control-label">Description</label>
                <textarea class="form-control" id="cp_description_textarea" placeholder="Desciption about the company" disabled="disabled"></textarea>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="col-xs-12">
                <input type="button" id="submit_special_request" class="btn btn-default pull-right" value="Submit" style="display: none;" />
            </div>
        </div>
    </div>
</div>

<div class="modal modal-warning" id="warning_company_profile_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
                <h4 class="modal-title">Warning!</h4>
            </div>
            <div class="modal-body">
                <p>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" id="warning_company_profile_modal_yes" class="btn btn-outline pull-right" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-success" id="success_company_profile_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
                <h4 class="modal-title">Success!</h4>
            </div>
            <div class="modal-body">
                <p>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/companyprofile")
}

