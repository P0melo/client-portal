<div class="modal fade" id="edit_onsite_booking_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Edit On Site Accommodation Booking</h4>
            </div>
            <div class="modal-body">

                <div class="box box-solid">
                    <div id="accomodation" class="box-body">
                        <div class="col-lg-12 form-group">
                            <div class="col-xs-12 col-sm-6">
                                <label for="accomodation_mnno" class="control-label">Trainee No.</label>
                                <input id="e_mnno_input" class="form-control" disabled />
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <label for="accomodation_rank" class="control-label">Rank</label>
                                <input id="e_rank_input" type="text" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-lg-12 form-group">
                            <div class="col-xs-12 col-sm-6">
                                <label for="accomodation_name" class="control-label">Name</label>
                                <input id="e_name_input" type="text" class="form-control" disabled />
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <label for="reservation_type" class="control-label">Type</label>
                                @*<input id="reservation_type_input" type="text" class="form-control" style="border-radius: 3px;" />*@
                                <select id="e_reservation_type" class="form-control">
                                    <option value="1">
                                        New Booking
                                    </option>
                                    <option value="2">
                                        Extension
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="col-xs-12 col-sm-6">
                                <label for="room_type" class="control-label">Room</label>
                                @*<input id="reservation_type_input" type="text" class="form-control" style="border-radius: 3px;" />*@
                                <select id="e_room_type" class="form-control">
                                    <option value="1">
                                        Dorm - Standard
                                    </option>
                                    <option value="2">
                                        Dorm - Superior
                                    </option>
                                    <option value="3">
                                        Hotel - Single
                                    </option>
                                    <option value="4">
                                        Hotel - Double
                                    </option>
                                    @*<option value="5">
                                            Executive Room
                                        </option>*@
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 form-group">
                            <div class="col-xs-12 col-md-12 col-lg-6">
                                <label for="accomodation_date" class="control-label">Date</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="e_accomodation_date">
                                </div>

                            </div>
                            &nbsp;
                            <p style="padding-top: 5px;" class="col-xs-12 col-md-12 col-lg-6 control-label">Check in time is 13:00; Check out time is 12:00</p>
                            <!-- /.input group -->
                        </div>

                        <div class="col-lg-12 form-group">
                            <div class="col-xs-12 col-sm-6">
                                <label for="mode_of_payment" class="control-label">Payment</label>

                                <select id="e_mode_of_payment" class="form-control">
                                    <option value="0">
                                        Company Sponsored
                                    </option>
                                    <option value="1">
                                        Personal Account
                                    </option>
                                </select>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <label for="reason" class="control-label">Reason</label>
                                <select id="e_accomodation_reason" class="form-control">
                                    <option value="@System.Configuration.ConfigurationManager.AppSettings["accomodation_reason_value1"]">
                                        @System.Configuration.ConfigurationManager.AppSettings["accomodation_reason_text1"]
                                    </option>
                                    <option value="@System.Configuration.ConfigurationManager.AppSettings["accomodation_reason_value2"]">
                                        @System.Configuration.ConfigurationManager.AppSettings["accomodation_reason_text2"]
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <div class="col-xs-12">
                                <label for="accomodation_remarks" class="control-label">Remarks</label>
                                <input id="e_accomodation_remarks_input" type="text" class="form-control" style="border-radius: 3px;" placeholder="Required" />
                            </div>
                        </div>

                        <div class="form-group col-sm-12">
                            <div class="col-sm-12">
                                <button type="button" id="e_cancel_accomodation_btn" class="btn btn-danger pull-left">Cancel Reservation</button>
                                <button type="button" id="e_save_accomodation_btn" class="btn btn-default pull-right">Submit</button>
                                @*<button type="button" id="view_accomodation_btn" class="btn btn-default pull-right">View Rooms</button>*@
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

