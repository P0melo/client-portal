<body class="hold-transition skin-red sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <div class="logo" style="background-color: white !important;">
                <span class="logo-mini" style="text-align:center"><img class="umtc-logo-circle" src="@Url.Content("~/Content/Images/umtc_logo_circle.png")" /></span>
                <span class="logo-lg"><img class="umtc-logo" src="@Url.Content("~/Content/Images/umtc_logo_with_white_bg.png")" /></span>
            </div>
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul id="side_links" class="sidebar-menu" data-widget="tree">
                    <!-- Optionally, you can add icons to the links -->
                    <li><a id="home_lnk" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i><span>Home</span></a></li>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Regular"))
                    {
                        <li class="custom_treeview">
                            <a id="course_reservation_lnk">
                                <i class="fa fa-hotel"></i><span>Course Reservation</span><span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="custom_treeview-menu" style="display: none">
                                <li><a id="newCrewRegistration_lnk" href="@Url.Action("NewCrewRegistration", "Forms")"><i class="fa fa-user-plus"></i><span>Register New Crew</span></a></li>
                                <li><a id="course_list_lnk" href="@Url.Action("CourseList", "CourseBooking")"><i class="fa fa-book"></i><span>Course Booking</span></a></li>
                                <li><a id="accommodation_lnk" href="@Url.Action("OnSiteAccommodation", "Forms")"><i class="fa fa-hotel"></i><span>On-Site Accommodation</span></a></li>
                                <li><a id="off_site_accommodation_lnk" href="@Url.Action("OffSiteAccommodation", "Forms")"><i class="fa fa-suitcase"></i><span>Off-Site Accommodation</span></a></li>
                                <li><a id="meal_lnk" href="@Url.Action("Meals", "Forms")"><i class="fa fa-spoon"></i><span>Meals Arrangement</span></a></li>
                                <li><a id="transportation_lnk" href="@Url.Action("Transportation", "Forms")"><i class="fa fa-bus"></i><span>Transportation</span></a></li>
                            </ul>
                        </li>

                        <li class="custom_treeview">
                            <a id="management_lnk">
                                <i class="fa fa-cogs"></i><span>Management</span><span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="custom_treeview-menu" style="display: none">
                                @*<li><a id="companyProfile_lnk" href="@Url.Action("UnderConstruction", "Home")"><i class="fa fa-id-card"></i><span>Company Profile</span></a></li>
                                    <li><a id="certificates_lnk" href="@Url.Action("Certificates", "Forms")"><i class="fa fa-certificate"></i><span>Certificates</span></a></li>
                                    <li><a id="reports_lnk" href="@Url.Action("UnderConstruction", "Home")"><i class="fa fa-bar-chart"></i><span>Reports</span></a></li>
                                    <li><a id="customerFeedback_lnk" href="@Url.Action("UnderConstruction", "Home")"><i class="fa fa-comment"></i><span>Customer Feedback</span></a></li>
                                    <li><a id="accountStatement_lnk" href="@Url.Action("UnderConstruction", "Home")"><i class="fa fa-file"></i><span>Account Statement</span></a></li>
                                    <li><a id="downloads_lnk" href="@Url.Action("UnderConstruction", "Home")"><i class="fa fa-download"></i><span>Downloads</span></a></li>
                                    <li><a id="contactUs_lnk" href="@Url.Action("UnderConstruction", "Home")"><i class="fa fa-phone"></i><span>Contact Us</span></a></li>*@
                                @if (User.IsInRole("Regular"))
                                {
                                    <li><a id="requests_link" href="@Url.Action("Requests", "Forms")"><i class="fa fa-list"></i><span>Your Requests</span></a></li>
                                }

                                @if (User.IsInRole("Administrator"))
                                {
                                    <li><a id="administration" href="@Url.Action("Index", "Administration")"><i class="fa fa-cog"></i><span>Administration</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <h1></h1>
                <ol class="breadcrumb">
                    <li id="home_lnk"></li>
                    <li id="current_page" class="active"></li>
                </ol>
            </section>
            <section class="content container-fluid">
                @RenderBody()
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                @*Anything you want*@
            </div>
            <strong>Client Portal Version 1.0.0 | Copyright &copy; @DateTime.Now.Year | <a href="#">United Marine Training Center</a> | </strong> All rights reserved
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>

    <div class="modal modal-info fade" id="change_password_modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Information!</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-default fade" id="modal_search_crew" hidden>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Search Crew</h4>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12" id="selected_crews_div" style="display: none">
                        <p>
                            <label>Selected Crews: </label>
                            <span id="selected_crews"></span>
                        </p>
                    </div>
                    <table id="crew_list_tbl_search" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Trainee No.</th>
                                <th>Position</th>
                                <th>Name</th>
                                @*<th>Nation</th>*@
                                <th>Birthday</th>
                                @*<th>Birth Place</th>*@
                                @*<th>Contact</th>*@
                                <th>Gender</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="crew_list_tbl_tbody_search"></tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                    <button type="button" id="modal_search_crew_submit" style="display: none; margin-right: 10px;" class="btn btn-default pull-right" data-dismiss="modal">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-warning fade" id="modal_search_crew_warning" hidden>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Warning!</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="modal_search_crew_warning_yes" class="btn btn-outline pull-right" data-dismiss="modal">Yes</button>
                    <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-warning fade" id="modal_batch_search_crew_warning" hidden>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Warning!</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="modal_batch_search_crew_warning_yes" class="btn btn-outline pull-right">Yes</button>
                    <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-danger fade" hidden>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Oops! Something went wrong...</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal modal-warning fade modal_warning_template" id="">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Warning!</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-success fade modal_success_template" id="">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Success!</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-danger fade modal_danger_template" id="">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Oops... An error has occured.</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>


